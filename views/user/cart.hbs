<section class="cart-page container">

  <h2 class="cart-title">Your Cart</h2>

  {{#if cartProducts.length}}

    <div class="cart-wrapper">

      {{#each cartProducts}}
      <div class="cart-item">

        <div class="cart-left">
<div class="cart-img-wrapper">
  {{#if this.images}}
    {{#if (startsWith this.images.[0] "http")}}
      <img src="{{this.images.[0]}}" alt="{{this.name}}" class="cart-img">
    {{else}}
      <img src="/product-images/{{this.images.[0]}}" alt="{{this.name}}" class="cart-img">
    {{/if}}
  {{else}}
    <img src="/img/no-image.png" alt="No image" class="cart-img">
  {{/if}}
</div>

        </div>

        <div class="cart-middle">
          <h5 class="cart-name">{{this.name}}</h5>
          <p class="cart-price">₹{{this.price}}</p>
          <div class="cart-qty-box">
  <a href="/change-quantity/{{this._id}}/decrease" class="qty-btn">−</a>

  <span class="qty-number">{{this.quantity}}</span>

  <a href="/change-quantity/{{this._id}}/increase" class="qty-btn">+</a>
</div>

        </div>

        <div class="cart-right">
          <p class="cart-total">
            ₹{{this.itemTotal}}
          </p>
        </div>

      </div>
      {{/each}}
     <div class="cart-summary">
  <h5>Subtotal</h5>
  <h4>₹{{subtotal}}</h4>
</div>
      <div class="cart-footer">
        {{#if loggedIn}}
          <a href="/checkout" class="btn-main">Proceed to Checkout</a>
        {{else}}
          <a href="/login" class="btn-main">Sign in to Continue</a>
        {{/if}}
      </div>

    </div>

  {{else}}
    <div class="empty-cart">
      <i class="bi bi-bag-x"></i>
      <h4>Your cart is empty</h4>
      <a href="/" class="btn-outline">Continue Shopping</a>
    </div>
  {{/if}}

</section>
