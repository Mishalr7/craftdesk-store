
<main>
  <section class="featured-products py-4">
<div class="container my-4">
  <h2 class="section-title mb-4">Featured Products</h2>

  <div class="products-grid">
    {{#each products}}

    <!-- CARD -->
<div class="product-card">
  <div class="product-img">
    {{#if this.images}}
      {{#if (startsWith this.images.[0] "http")}}
        <img src="{{this.images.[0]}}" alt="{{this.name}}">
      {{else}}
        <img src="/product-images/{{this.images.[0]}}" alt="{{this.name}}">
      {{/if}}
    {{else}}
      <img src="/img/no-image.png" alt="No image">
    {{/if}}
  </div>

  <div class="product-info">
    <h5 class="price">â‚¹{{this.price}}</h5>
    <p class="title">{{this.name}}</p>
    {{#if this.brand}}
  <span class="brand">{{this.brand}}</span>
{{/if}}


    {{#if this.stock}}
      <span class="badge bg-success">In Stock</span>
    {{else}}
      <span class="badge bg-danger">Out of Stock</span>
    {{/if}}
  </div>

  <div class="actions">
    <a href="/product/{{this._id}}" class="btn-outline">
      Quick View
    </a>

    {{#if this.stock}}
      <a href="/add-to-cart/{{this._id}}" class="btn-main">
        Add to Cart
      </a>
    {{else}}
      <button class="btn-main disabled-btn" disabled>
        Out of Stock
      </button>
    {{/if}}
  </div>
</div>

    <!-- END CARD -->
{{/each}}
   

  </div>
</div>
  </section>
</main>